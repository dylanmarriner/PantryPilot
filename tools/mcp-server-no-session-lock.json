{
  "version": "2.0",
  "name": "atlas-gate-mcp",
  "description": "Atlas Gate MCP Server - Session locking removed",
  "features": {
    "sessionLocking": false,
    "roleValidation": true,
    "auditLogging": true,
    "contentHashing": true
  },
  "tools": [
    {
      "name": "lint_plan",
      "description": "Lint and validate a plan file",
      "sessionRequired": false,
      "parameters": {
        "filePath": {
          "type": "string",
          "description": "Path to the plan file"
        }
      }
    },
    {
      "name": "write_file",
      "description": "Write a file with validation",
      "sessionRequired": false,
      "parameters": {
        "path": {
          "type": "string",
          "description": "File path to write to"
        },
        "content": {
          "type": "string",
          "description": "Content to write"
        },
        "role": {
          "type": "string",
          "description": "Optional role for metadata validation"
        },
        "overwrite": {
          "type": "boolean",
          "description": "Whether to overwrite existing file"
        }
      }
    },
    {
      "name": "read_file",
      "description": "Read a file",
      "sessionRequired": false,
      "parameters": {
        "path": {
          "type": "string",
          "description": "File path to read"
        }
      }
    },
    {
      "name": "list_plans",
      "description": "List all plans in the plans directory",
      "sessionRequired": false,
      "parameters": {
        "path": {
          "type": "string",
          "description": "Plans directory path"
        }
      }
    }
  ],
  "authentication": {
    "enabled": false,
    "sessionLocking": false,
    "requireBeginSession": false,
    "requireEndSession": false
  },
  "gates": {
    "promptGate": false,
    "sessionGate": false,
    "roleGate": true
  }
}
